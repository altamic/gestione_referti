- form_for @invoice_trail do |f|
  = f.error_messages :object_name => 'modulo accettazione'
  %p
    %strong= f.label :full_name, t(:full_name)
    &nbsp;
    = f.text_field :full_name, :size => 26, :onkeyup => 'javascript:this.value=this.value.toUpperCase();'
  %p
    %strong= f.label :admission_date, t(:admission_date)
    = f.date_select :admission_date
  %p
    %strong= f.label :admission_code, t(:admission_code)
    &nbsp;    
    = f.text_field :admission_code, :size => 10
  %p
    %strong= f.label :gross_amount, t(:gross_amount)
    &nbsp;
    = f.text_field :gross_amount, :size => 6
  %p
    %strong= f.label :discount, t(:discount)
    &nbsp;
    = f.text_field :discount, :size => 4, :onkeyup => "javascript:computeDiscount(this.value);"
    \%
  %p
    %strong= f.label :discounted_amount, t(:discounted_amount)
    = f.text_field :discounted_amount, :size => 6
  %p
    %strong= f.label :payed, t(:payment_status)
    = f.radio_button :payed, false, :onclick => "javascript:$('payment_date').hide();"
    = f.label :payed_false, t(:not_payed)
    = f.radio_button :payed, true, :onclick => "javascript:$('payment_date').show();"
    = f.label :payed_true, t(:payed)
    %span#payment_date{:style => 'display:none'}
      il
      = f.date_select :payment_date
  %p
    %strong= f.label :invoice_number, t(:invoice_number)
    = f.text_field :invoice_number, :size => 8
  %p
    %strong= f.label :notes, t(:notes)
    %br
    = f.text_area :notes, :size => '45x4'
  %p
    = f.submit t(:submit)
    = t(:or)
    = cancel_link

  
