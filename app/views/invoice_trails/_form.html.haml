- form_for @invoice_trail do |f|
  = f.error_messages
  %p
    = f.label :admission_date, t(:admission_date)
    = f.date_select :admission_date
  %p
    = f.label :external_code, t(:external_code)
    = f.text_field :external_code
  %p
    = f.label :last_name, t(:last_name)
    = f.text_field :last_name
  %p
    = f.label :first_name, t(:first_name)
    = f.text_field :first_name
  %p
    = f.label :gross_amount, t(:gross_amount)
    = f.text_field :gross_amount, :size => 4
  %p
    = f.label :payed_amount, t(:payed_amount)
    = f.text_field :payed_amount, :size => 4
  %p
    = f.label :discount, t(:discount)
    = f.text_field :discount, :size => 4
  %p
    = f.label :payed, t(:payed)
    = f.check_box :payed
  - if @invoice_trail.payed
    %p
      = f.label :payment_date, t(:payment_date)
      = f.date_select :payment_date
  %p
    = f.label :invoice_number, t(:invoice_number)
    = f.text_field :invoice_number, :size => 8
  %p
    = f.label :notes, t(:notes)
    %br
    = f.text_area :notes, :size => '45x4'
  %p
    = f.submit t(:submit)
    = t(:or)
    = cancel_link

  
