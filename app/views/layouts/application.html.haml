!!! Strict
%html{ "xml:lang" => "it-IT", :lang => "it-IT", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      = t(:site_title)
      &mdash;
      = h(yield(:title) || "Untitled")
    
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = javascript_include_tag :defaults, italian_calendar_date_select, :cache => true
    = stylesheet_link_tag 'application', "calendar_date_select/silver.css", :cache => true
  
  %body
    #header
      %h1
        %a{ :href => "" }
          - if show_title?
            =h yield(:title)
      
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
    #content
      - if show_breadcrumbs?
        #breadcrumbs
          = yield(:breadcrumbs)
      = yield
    #footer
      %p
        %b
          Gestione Referti Bios
        is a
        %a{ :href => "http://convergent.it" }
          %span.copyright
            convergent
        solution